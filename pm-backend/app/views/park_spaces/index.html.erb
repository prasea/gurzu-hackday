<h1>Park Spaces</h1>

<%= link_to 'New Park Space', new_park_space_path, class: 'btn btn-primary mb-3' %>

<% @park_spaces.each do |park_space| %>
  <h1><%= park_space.name %> </h1>
  <p><%= park_space.location%></p>
  <%= link_to 'Add Park Vechile', new_park_space_park_vehicle_path(park_space), class: 'btn btn-info btn-sm' %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Vehicle</th>
        <th>Capacity</th>
        <th>Hourly Rate</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% park_space.vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.vehicle_name.humanize %></td>
          <td><%= vehicle.capacity %></td>
          <td><%= vehicle.hourly_rate %></td>
          <td><%= vehicle.status ? 'Available' : 'Pack' %></td>
          <td>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Edit', edit_park_space_path(park_space), class: 'btn btn-warning btn-sm' %>
  <%= link_to 'Delete', park_space_path(park_space), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>

<% end %>
